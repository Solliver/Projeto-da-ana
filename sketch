deixar o cor;
deixar posicionaHorizontal; // x
deixar a posição Vertical; // y

Configuração da função() {
 createCanvas (400, 400) 
 fundo (cor (100,0,0)); 
 cor = cor (aleatório (0,255), aleatório (0,255), aleatório (0,255)); 
   posicaoHorizontal = 200; 
 posicaoVertical = 200; 
}


Desenho de função() {
  
 preenchimento(cor) 
   circle(posicaoHorizontal,posicaoVertical,50); 
 
  
  
 Se (mouseX = posicaoHorizontal){ 
     posicaoHorizontal =  posicaoHorizontal - 1; 
   } 
  
 Se (mouseX = posicaoHorizontal){ 
     posicaoHorizontal =  posicaoHorizontal + 1; 
   } 
  
 Se (mouseY = posicaoVertical){ 
 posicaoVertical-; 
   } 
    
 Se (mouseY = posicaoVertical){ 
 posicaoVertical++; 
   } 
  
 Se (mouseIsPressed){ 
 cor = cor (aleatório (0,255), aleatório (0,255), aleatório (0,100)); 
   } 
    
}
